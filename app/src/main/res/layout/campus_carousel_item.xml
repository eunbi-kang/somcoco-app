<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="15dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/carousel_build_info"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFC230"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/campus_carousel_item"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/carousel_build_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#5B000000"
                android:inputType="text"
                android:paddingVertical="10dp"
                android:paddingLeft="10dp"
                android:text="학술정보관"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#EFEFEF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carousel_build_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="장안대학교에 여러가지 일을 처리해주는 기관" />

            <!--<Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/orange_edge"
                android:text="찾아가기"
                android:textColor="#FFC230" />-->

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>